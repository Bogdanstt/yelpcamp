<%- include('../partials/header.ejs') -%>
<form
  action="/campgrounds/<%= campground._id %>/comments "
  method="POST"
  class="form-signin"
  style="width:25%; margin:20px auto"
>
  <h1 class="h1 mb-3 font-weight-normal" style="text-align:center">
    Add new comment <%= campground.name %>
  </h1>

  <div class="form-group">
    <input
      type="text"
      id="campName"
      class="form-control"
      placeholder="Text"
      name="comment[text]"
    />
  </div>

  <div class="form-group">
    <input
      id="campURL"
      class="form-control"
      placeholder="Author"
      name="comment[author]"
    />
  </div>

  <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
  </div>

  <div class="mt-5">
    <a href="/campgrounds">Go back</a>
  </div>
</form>

<%- include('../partials/footer.ejs') -%>
