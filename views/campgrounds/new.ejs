<%- include('../partials/header.ejs') -%>
<form
  action="/campgrounds"
  method="POST"
  class="form-signin"
  style="width:25%; margin:20px auto"
>
  <h1 class="h1 mb-3 font-weight-normal" style="text-align:center">
    Create a new campground
  </h1>

  <div class="form-group">
    <input
      type="text"
      id="campName"
      class="form-control"
      placeholder="Name"
      name="name"
    />
  </div>

  <div class="form-group">
    <input
      id="campURL"
      class="form-control"
      placeholder="Image URL"
      name="image"
    />
  </div>

  <div class="form-group">
    <input
      class="form-control"
      type="text"
      name="description"
      placeholder="Campground description"
    />
  </div>

  <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
  </div>

  <div class="mt-5">
    <a href="/campgrounds">Go back</a>
  </div>
</form>

<%- include('../partials/footer.ejs') -%>
